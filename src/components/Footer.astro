---
const today = new Date();
const social = [
	{
		name: 'GitHub',
		url: 'https://github.com/sapbtpusertas', // Your GitHub URL
	},
	// Add other social links here if you wish
];
---
<footer class="mt-auto p-6 text-center text-sm text-gray-500">
	<div>
		&copy; {today.getFullYear()} Pinaki Halder. All rights reserved.
	</div>
	<div class="mt-4 flex justify-center gap-4">
		{social.map(item => (
			<a href={item.url} target="_blank" rel="noopener noreferrer" class="hover:text-gray-900">
				{item.name}
			</a>
		))}
	</div>
</footer>